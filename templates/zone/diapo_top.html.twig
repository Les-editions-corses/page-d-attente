        #}

        {% if infos.adress is not null %}

            {{ infos.adress }}</br>
            {{ infos.cp }} {{ infos.city }}
        {% endif %}
    </div>

    <div class="lienmenu">
        {% if infos.tel is not null %}
            <a href="tel:{{ infos.tel }}" class="tel">
                <i class="fas fa-phone"></i>
                <span>{{ infos.tel }}</span>
            </a>
        {% endif %}

        {% if infos.mobile is not null %}
            <a href="tel:{{ infos.mobile }}" class="tel">
                <i class="far fa-mobile"></i>
                <span>{{ infos.mobile }}</span>
            </a>
        {% endif %}

        {% if infos.mail is not null %}
            <a href="mailto:{{ infos.mail }}" class="tel">
                <i class="fas fa-at"></i>
                <span>{{ infos.mail }}</span>
            </a>
        {% endif %}


        {% if infos.facebook is not null %}
            <a href={{ infos.facebook }} class="tel">
                <i class="fab fa-facebook"></i>
                <span></span>
            </a>
        {% endif %}

        {% if infos.twitter is not null %}
            <a href={{ infos.twitter }} class="tel">
                <i class="fab fa-twitter"></i>
                <span></span>
            </a>
        {% endif %}

        {% if infos.insta is not null %}
            <a href={{ infos.insta }} class="tel">
                <i class="fab fa-instagram"></i>
                <span></span>
            </a>
        {% endif %}

    </div>
</header>

<div class="zone diapo_top {{ zone.subtype }} {{ page.type.name }}">
    {% if file_exist('img/logo_white.png') %}
        <div class="logo">
                <img data-src="{{ asset('img/logo_white.png') }}" class="lazy" alt="logo">
        </div>
    {% endif %}

    <div class="content">
        <h{{zone.typehead}} class="title">{{ zone.detail(locale).title }}</h{{ zone.typehead}}>
        {% if zone.detail(locale).title2 is not null %}
            <h{{zone.typehead}} class="title">{{ zone.detail(locale).title2 }}</h{{ zone.typehead}}>
        {% endif %}


        <div class="desc">{{ zone.detail(locale).description | raw }}</div>
        <div class="desc">{{ zone.detail(locale).description2 | raw }}</div>


        {% if infos.resa is not null %}
        <div class="c-reserver">
            <a href="{{ infos.resa }}" target="_blank" class="reserver">
              <span>
                  <span>
                    <span>{% trans %}RÃ©server Maintenant{% endtrans %}</span>
                  </span>
              </span>
            </a>
        </div>


        {% endif %}

    </div>
    {% if zone.videos.count != 0 %}


    <video loop muted  class="video-parallax"  playsinline>
        <source src="{{ asset('uploads/'~ zone.videos.0.path) }}" type="video/mp4">
    </video>

    {% else %}

        <div class="swiper-container">
            <!-- Additional required wrapper -->
            <div class="swiper-wrapper">
                <!-- Slides -->
                {% for photo in zone.photos  %}
                    <div class="swiper-slide item photo " data-id="{{ photo.id }}" data-name="{{ fileName(photo,locale) }}">
                        <img alt="{{ photo.detail(locale).title }}" />
                    </div>
                {% endfor %}


            </div>
            <div class="swiper-controls">
                <div class="swiper-button-prev"><i class="fal fa-chevron-left"></i></div>
                <div class="swiper-button-next"><i class="fal fa-chevron-right"></i></div>
            </div>
        </div>
    {% endif %}
</div>